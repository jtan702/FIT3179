{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 500,
  "title": "Map of America",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jtan702/FIT3179/master/javascript/america_map.topojson",
        "format": {"type": "topojson", "feature": "america_map"},
      },
      "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"}
    },
    {"data": {
      "url": "https://raw.githubusercontent.com/jtan702/FIT3179/master/datasets/landslides.csv" 
    },
    "mark": {"type": "circle", "tooltip": {"content": "data"}},
    "transform": [{"filter":{"field": "continent_code", "equal": "NA"}}],
    "encoding": {
      "longitude": {"field": "longitude", "type": "quantitative"},
      "latitude": {"field": "latitude", "type": "quantitative"},
      "size": {"value": 10},
      "color": {"value": "red"}
    }
  }
  ]
}

